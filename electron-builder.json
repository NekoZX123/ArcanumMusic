{
    "productName": "ArcanumMusic",
    "appId": "moe.nekozx123.arcanummusic",
    "files": [
        "./app/app.js",
        "./app/accountHelper.js",
        "./app/configHelper.js",
        "./app/fileManager.js",
        "./app/globalUtils.js",
        "./app/preload.mjs",
        "./app/service.js",
        "./dist"
    ],
    "directories": {
        "output": "./build/output"
    },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": ["x64", "ia32"]
            }
        ],
        "icon": "./public/appIcon/AppIcon.ico"
    },
    "nsis": {
        "artifactName": "${productName}_${version}_Setup.${ext}",
        "shortcutName": "${productName}",
        "uninstallDisplayName": "${productName}",
        "installerIcon": "./dist/appIcon/AppIcon.ico",
        "uninstallerIcon": "./dist/appIcon/AppIcon.ico"
    },
    "linux": {
        "target": [
            {
                "target": "deb",
                "arch": ["x64"]
            },
            {
                "target": "AppImage",
                "arch": ["x64"]
            }
        ],
        "icon": "./public/appIcon/ArcanumMusic.png"
    }
}
