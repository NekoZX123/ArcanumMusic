{
    "productName": "ArcanumMusic",
    "appId": "moe.nekozx123.arcanummusic",
    "files": [
        "./app/app.js",
        "./app/accountHelper.js",
        "./app/configHelper.js",
        "./app/fileManager.js",
        "./app/globalUtils.js",
        "./app/preload.mjs",
        "./app/service.js",
        "./dist"
    ],
    "extraFiles": [
        "./icons"
    ],
    "directories": {
        "output": "./build/output"
    },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": ["x64"]
            }
        ],
        "icon": "./icons/ArcanumMusic.ico"
    },
    "nsis": {
        "artifactName": "${productName}_${version}_Setup.${ext}",
        "shortcutName": "${productName}",
        "uninstallDisplayName": "${productName}",
        "installerIcon": "./icons/ArcanumMusic.ico",
        "uninstallerIcon": "./icons/ArcanumMusic.ico"
    },
    "linux": {
        "target": [
            {
                "target": "deb",
                "arch": ["x64"]
            },
            {
                "target": "AppImage",
                "arch": ["x64"]
            }
        ],
        "icon": "./icons/ArcanumMusic.png",
        "synopsis": "Arcanum Music - A multiplatform music application",
        "category": "Audio",
        "desktop": {
            "entry": {
                "Name": "ArcanumMusic",
                "Comment": "Arcanum Music - A multiplatform music application",
                "Terminal": false,
                "Categories": "Audio;Music;"
            }
        }
    }
}
