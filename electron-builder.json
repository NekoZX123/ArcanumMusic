{
    "productName": "ArcanumMusic",
    "appId": "moe.nekozx123.arcanummusic",
    "files": [
        "./app/app.js",
        "./app/accountHelper.js",
        "./app/configHelper.js",
        "./app/fileManager.js",
        "./app/globalUtils.js",
        "./app/preload.mjs",
        "./app/service.js",
        "./dist"
    ],
    "extraFiles": [
        "./icons"
    ],
    "directories": {
        "output": "./build/output"
    },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": ["x64", "ia32"]
            }
        ],
        "icon": "./icons/AppIcon.ico"
    },
    "nsis": {
        "artifactName": "${productName}_${version}_Setup.${ext}",
        "shortcutName": "${productName}",
        "uninstallDisplayName": "${productName}",
        "installerIcon": "./icons/AppIcon.ico",
        "uninstallerIcon": "./icons/AppIcon.ico"
    },
    "linux": {
        "target": [
            {
                "target": "deb",
                "arch": ["x64"]
            },
            {
                "target": "AppImage",
                "arch": ["x64"]
            }
        ],
        "icon": "./icons/AppIcon.png",
        "synopsis": "Arcanum Music - A multiplatform music application",
        "category": "Audio;Music",
        "desktop": {
            "Name": "Arcanum Music",
            "Icon": "./icons/AppIcon.png",
            "Comment": "A multiplatform music application",
            "Type": "Application",
            "Category": "Audio;Music",
            "Keywords": "music;audio;arcanummusic"
        }
    }
}
